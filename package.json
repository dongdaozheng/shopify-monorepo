{
  "name": "hydrogen-monorepo",
  "version": "1.0.0",
  "description": "A monorepo for the Hydrogen app",
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "turbo run dev",
    "dev:lib": "turbo run dev --filter=@repo/lib",
    "dev:components": "turbo run dev --filter=@repo/components",
    "dev:australia": "turbo run dev --filter=shopify-australia",
    "dev:test": "turbo run dev --filter=shopify-test",
    "deploy:australia": "turbo run deploy --filter=shopify-australia",
    "deploy:test": "turbo run deploy --filter=shopify-test",
    "build": "turbo run build",
    "build:lib": "turbo run build --filter=@repo/lib",
    "build:graphql": "turbo run build --filter=@repo/graphql",
    "build:i18n": "turbo run build --filter=@repo/i18n",
    "build:components": "turbo run build --filter=@repo/components",
    "build:australia": "turbo run build --filter=shopify-australia",
    "build:test": "turbo run build --filter=shopify-test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "commit": "git-cz",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "dependencies": {
    "@shopify/hydrogen": "2025.7.0",
    "@shopify/shopify-api": "^12.0.0",
    "axios": "^1.12.2",
    "cookie": "^1.0.2",
    "graphql": "^16.10.0",
    "isbot": "^5.1.22",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router": "7.9.2",
    "react-router-dom": "7.9.2",
    "remix-i18n": "^2.0.0",
    "set-cookie-parser": "^2.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/compat": "^1.2.5",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@graphql-codegen/cli": "5.0.2",
    "@react-router/dev": "7.9.2",
    "@react-router/fs-routes": "7.9.2",
    "@shopify/api-codegen-preset": "^1.2.0",
    "@shopify/cli": "3.85.4",
    "@shopify/hydrogen-codegen": "^0.3.3",
    "@shopify/mini-oxygen": "^4.0.0",
    "@shopify/oxygen-workers-types": "^4.1.6",
    "@shopify/prettier-config": "^1.1.2",
    "@tailwindcss/vite": "^4.1.6",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/eslint": "^9.6.1",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "cssnano": "^7.1.1",
    "cz-git": "^1.12.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.7.0",
