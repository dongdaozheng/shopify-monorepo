    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.14.0",
    "graphql-config": "^5.1.5",
    "graphql-tag": "^2.12.6",
    "husky": "^9.1.7",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "lint-staged": "^16.2.6",
